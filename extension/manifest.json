{
    "manifest_version": 2,

    "applications": {
        "gecko": {
            "id": "tidebringer@steffo.eu"
        }
    },
    
    "name": "Tidebringer",
    "version": "2022.07.22.1",
    "version_name": "2022-07-22",
    "developer": {
        "name": "Stefano Pigozzi",
        "url": "https://github.com/Steffo99/tidebringer-firefox"
    },

    "description": "A Firefox extension adding a 'Add all subscribed elements to collection' to Steam Workshop pages.",

    "background": {
        "scripts": []
    },

    "content_scripts": [
        {
            "matches": ["https://steamcommunity.com/sharedfiles/managecollection/*"],
            "js": ["add_items_to_collection.js"],
            "css": ["add_items_to_collection.css"]
        }
    ],

    "icons": {
        "128": "tidebringer.png"
    }
}
